<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowJobParentLayout_id"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/app_transparent"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corners"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Job Creation Date:"
                    android:textColor="@color/app_text_color_primary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/jobCreationDate_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1/1/2020"
                    android:textColor="@color/app_text_color_primary"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Job Expiration Date:"
                    android:textColor="@color/app_text_color_primary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/jobExpirationDate_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2/1/2020"
                    android:textColor="@color/app_text_color_primary"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2"
                android:layout_marginTop="10dp"
                android:text="Subject:"
                android:textColor="@color/app_text_color_primary"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/jobSubject_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/layout3"

                android:text="Bangla, English, Religion"
                android:textColor="@color/app_text_color_primary"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jobSubject_id"
                android:layout_marginTop="10dp"
                android:text="More Details..."
                android:textColor="@color/app_text_color_primary"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>