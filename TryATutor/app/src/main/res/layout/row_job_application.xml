<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rowJobApplicationLayout_id"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/app_transparent"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corners"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/layout1_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Applicant : "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_text_color_primary"/>

                <TextView
                    android:id="@+id/rowJobApplicationTutorName_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hasanath Jamy"
                    android:textSize="15sp"
                    android:textColor="@color/app_text_color_primary"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1_id"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Job Post Date : "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_text_color_primary"/>

                <TextView
                    android:id="@+id/rowJobApplicationJobDate_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2/1/2020"
                    android:textSize="15sp"
                    android:textColor="@color/app_text_color_primary"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2_id"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subject :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_text_color_primary"/>

                <TextView
                    android:id="@+id/rowJobApplicationSubject_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="bangla"
                    android:textSize="15sp"
                    android:textColor="@color/app_text_color_primary"/>
            </LinearLayout>

            <TextView
                android:id="@+id/layout4_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout3_id"
                android:layout_marginTop="5dp"
                android:text="Job Location :"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/app_text_color_primary"/>
            <TextView
                android:id="@+id/rowJobApplicationJobDesc_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout4_id"
                android:text="Kodomtola, Bashabo"
                android:textSize="15sp"
                android:textColor="@color/app_text_color_primary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rowJobApplicationJobDesc_id"
                android:layout_marginTop="10dp"
                android:text="More Details..."
                android:textSize="15sp"
                android:textColor="@color/app_text_color_primary"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>